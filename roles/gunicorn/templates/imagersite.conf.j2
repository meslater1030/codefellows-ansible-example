description "imagersite"

start on (filesystem)
stop on runlevel [016]

respawn
setuid nobody
setgid nogroup
chdir {{ django_home }}
env DJANGO_SETTINGS_MODULE=imagersite.production
env DATABASE_URL={{ db_url }}
env SECRET_KEY={{ secret_key }}
env ALGORITHMIA_KEY='{{ algorithmia_key }}'
env EMAIL_HOST_USER={{ secret_email }}
env EMAIL_HOST_PASSWORD={{ email_host_password }}
env DEFAULT_FROM_EMAIL={{ secret_email }}
env MANAGERS='('Nick', {{ secret_email }})'
env ADMINS='(('Megan', {{ secret_email }}))'
env ALLOWED_HOSTS='{{ ec2_public_dns_name }}'
env DEFAULT_TO_EMAIL=''

exec gunicorn -b 127.0.0.1:8000 -w 4 imagersite.wsgi --error-logfile /tmp/gunicorn-error.log
